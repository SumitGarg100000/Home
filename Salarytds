    <script>
        // Toggle sections open/close
        function toggleSection(id) {
            const body = document.getElementById(id);
            const header = body.previousElementSibling;
            if (body.classList.contains('active')) {
                body.classList.remove('active');
                header.classList.remove('active');
            } else {
                body.classList.add('active');
                header.classList.add('active');
            }
        }

        // Tab functionality
        function openTab(evt, tabId) {
            // Hide all tab contents
            const tabContents = document.getElementsByClassName('tab-content');
            for (let i = 0; i < tabContents.length; i++) {
                tabContents[i].classList.remove('active');
            }

            // Remove active class from all tab buttons
            const tabButtons = document.getElementsByClassName('tab-btn');
            for (let i = 0; i < tabButtons.length; i++) {
                tabButtons[i].classList.remove('active');
            }

            // Show the current tab and add an active class to the button
            document.getElementById(tabId).classList.add('active');
            evt.currentTarget.classList.add('active');
        }

        // Save data to localStorage
        function saveToLocalStorage() {
            const inputs = document.querySelectorAll('input, select');
            const data = {};
            inputs.forEach(input => {
                data[input.id] = input.value;
            });
            localStorage.setItem('taxCalculatorData', JSON.stringify(data));
        }

        // Load data from localStorage
        function loadFromLocalStorage() {
            const savedData = localStorage.getItem('taxCalculatorData');
            if (savedData) {
                const data = JSON.parse(savedData);
                const inputs = document.querySelectorAll('input, select');
                inputs.forEach(input => {
                    if (data[input.id]) {
                        input.value = data[input.id];
                    }
                });
            }
            toggleDeductions();
        }

        // Toggle deductions section based on tax regime
        function toggleDeductions() {
            const taxScheme = document.getElementById('tax_scheme').value;
            const deductionsSection = document.getElementById('old-regime-deductions');
            const deductionsTable = document.getElementById('deductions-table');
            const deductionsHeader = document.getElementById('deductions-header');
            
            if (taxScheme === 'old') {
                deductionsSection.style.display = 'block';
                deductionsTable.style.display = 'table';
                deductionsHeader.textContent = 'Deductions (Old Regime)';
            } else {
                deductionsSection.style.display = 'none';
                if (document.getElementById('results-section').style.display !== 'none') {
                    deductionsTable.style.display = 'table';
                    deductionsHeader.textContent = 'Deductions (New Regime)';
                }
            }
        }

        // Reset all inputs and results
        function resetValues() {
            document.querySelectorAll('input, select').forEach(input => {
                if (input.type === 'number') input.value = '';
                else if (input.type === 'text') input.value = '';
                else if (input.id === 'tax_scheme') input.value = 'new';
            });
            localStorage.removeItem('taxCalculatorData');
            document.getElementById('results-section').style.display = 'none';
            toggleDeductions();
            if (window.tdsChart) window.tdsChart.destroy();
        }

        // Print page as PDF
        function printAsPDF() {
            window.print();
        }

        // Main calculation function
        function calculateTDS() {
            CalculateAllIncome();
            document.getElementById('results-section').style.display = 'block';
            // Switch to results tab
            openTab({ currentTarget: document.getElementById('results-tab-btn') }, 'results-tab');
            saveToLocalStorage();
        }

        function CalculateAllIncome() {
            // Income from Salary
            let oldbasicsalary = Math.max(0, Number(document.getElementById('basicsalary').value) || 0);
            let oldhra = Math.max(0, Number(document.getElementById('hra').value) || 0);
            let oldbonus = Math.max(0, Number(document.getElementById('bonus').value) || 0);
            let oldspecialallowance = Math.max(0, Number(document.getElementById('specialallowance').value) || 0);
            let oldotherallowance = Math.max(0, Number(document.getElementById('other_allowance').value) || 0);
            let oldgrosssalary = oldbasicsalary + oldhra + oldbonus + oldspecialallowance + oldotherallowance;
            let oldexemptionsec13a = Math.min(Math.max(0, Number(document.getElementById('exemptionsec13a').value) || 0), oldhra);
            let oldotherexemption = Math.min(Math.max(0, Number(document.getElementById('otherexemption').value) || 0), oldgrosssalary);
            let oldprofessionaltax = Math.min(Math.max(0, Number(document.getElementById('professionaltax').value) || 0), 2500);
            let oldstandarddeduction = Math.min(oldgrosssalary, 50000);
            let oldnetsalary = oldgrosssalary - (oldexemptionsec13a + oldotherexemption + oldprofessionaltax + oldstandarddeduction);

            let newbasicsalary = Math.max(0, Number(document.getElementById('basicsalary').value) || 0);
            let newhra = Math.max(0, Number(document.getElementById('hra').value) || 0);
            let newbonus = Math.max(0, Number(document.getElementById('bonus').value) || 0);
            let newspecialallowance = Math.max(0, Number(document.getElementById('specialallowance').value) || 0);
            let newotherallowance = Math.max(0, Number(document.getElementById('other_allowance').value) || 0);
            let newgrosssalary = newbasicsalary + newhra + newbonus + newspecialallowance + newotherallowance;
            let newexemptionsec13a = 0;
            let newotherexemption = 0;
            let newprofessionaltax = Math.min(Math.max(0, Number(document.getElementById('professionaltax').value) || 0), 2500);
            let newstandarddeduction = Math.min(newgrosssalary, 75000);
            let newnetsalary = newgrosssalary - (newexemptionsec13a + newotherexemption + newprofessionaltax + newstandarddeduction);

            // Income from House Property
            let grossAnnualValue = Math.max(0, Number(document.getElementById('grossannualvalue').value) || 0);
            let municipalTax = Math.max(0, Number(document.getElementById('municipaltaxes').value) || 0);
            let nav = Math.max(0, grossAnnualValue - municipalTax);
            let standardDeduction24a = nav * 0.3;
            let oldinterestself = Math.min(Math.max(0, Number(document.getElementById('interestselfoccupied').value) || 0), 200000);
            let oldinterestletout = Math.min(Math.max(0, Number(document.getElementById('interestletout').value) || 0), 200000);
            
            // For old regime, net income from house property calculation
            let oldnetincomehp = 0;
            if (grossAnnualValue > 0) {
                // For let-out property
                oldnetincomehp = nav - standardDeduction24a - oldinterestletout;
            } else {
                // For self-occupied property
                oldnetincomehp = -Math.min(oldinterestself, 200000);
            }
            
            let newinterestself = 0;
            let newinterestletout = Math.min(Math.max(0, Number(document.getElementById('interestletout').value) || 0), 200000);
            
            // For new regime, net income from house property calculation
            let newnetincomehp = 0;
            if (grossAnnualValue > 0) {
                // For let-out property
                newnetincomehp = nav - standardDeduction24a - newinterestletout;
            } else {
                // For self-occupied property, no deduction in new regime
                newnetincomehp = 0;
            }

            // Income from Other Sources
            let olddividendincome = Math.max(0, Number(document.getElementById('dividendincome').value) || 0);
            let oldotherincome = Math.max(0, Number(document.getElementById('otherincome').value) || 0);
            let oldnetothersources = olddividendincome + oldotherincome;
            
            let newdividendincome = Math.max(0, Number(document.getElementById('dividendincome').value) || 0);
            let newotherincome = Math.max(0, Number(document.getElementById('otherincome').value) || 0);
            let newnetothersources = newdividendincome + newotherincome;

            // Calculate Gross Total Income
            let oldgrosstotalincome = Math.max(0, oldnetsalary + oldnetincomehp + oldnetothersources);
            let newgrosstotalincome = Math.max(0, newnetsalary + newnetincomehp + newnetothersources);

            // Deductions
            let olddeduction80c = Math.min(150000, Math.max(0, Number(document.getElementById('deduction80c').value) || 0));
            let olddeduction80ccc = Math.min(150000 - olddeduction80c, Math.max(0, Number(document.getElementById('deduction80ccc').value) || 0));
            let olddeduction80ccd1 = Math.min(150000 - olddeduction80c - olddeduction80ccc, Math.max(0, Number(document.getElementById('deduction80ccd1').value) || 0));
            let oldrestrictdeduction = Math.min(150000, olddeduction80c + olddeduction80ccc + olddeduction80ccd1);
            let olddeduction80ccd1b = Math.min(50000, Math.max(0, Number(document.getElementById('deduction80ccd1b').value) || 0));
            let olddeduction80ccd2 = Math.max(0, Number(document.getElementById('deduction80ccd2').value) || 0);
            let olddeduction80d = Math.min(100000, Math.max(0, Number(document.getElementById('deduction80d').value) || 0));
            let olddeduction80g = Math.max(0, Number(document.getElementById('deduction80g').value) || 0);
            let olddeduction80e = Math.max(0, Number(document.getElementById('deduction80e').value) || 0);
            let olddeduction80tta = Math.min(10000, Math.max(0, Number(document.getElementById('deduction80tta').value) || 0));
            let oldtotaldeduction = oldrestrictdeduction + olddeduction80ccd1b + olddeduction80ccd2 + olddeduction80d + olddeduction80g + olddeduction80e + olddeduction80tta;
            let oldeligiblededuction = Math.min(Math.max(oldgrosstotalincome, 0), oldtotaldeduction);
            let oldnetincome = Math.max(oldgrosstotalincome - oldeligiblededuction, 0);

            // For new regime - only NPS employer contribution is allowed
            let newdeduction80c = 0;
            let newdeduction80ccc = 0;
            let newdeduction80ccd1 = 0;
            let newrestrictdeduction = 0;
            let newdeduction80ccd1b = 0;
            let newdeduction80ccd2 = Math.max(0, Number(document.getElementById('deduction80ccd2').value) || 0);
            let newdeduction80d = 0;
            let newdeduction80g = 0;
            let newdeduction80e = 0;
            let newdeduction80tta = 0;
            let newtotaldeduction = newdeduction80ccd2; // Only NPS employer contribution
            let neweligiblededuction = Math.min(Math.max(newgrosstotalincome, 0), newtotaldeduction);
            let newnetincome = Math.max(newgrosstotalincome - neweligiblededuction, 0);

            let oldroundoff = Math.round(oldnetincome / 10) * 10;
            let newroundoff = Math.round(newnetincome / 10) * 10;

            // Old Regime Tax Calculation
            let oldnormalincome = oldroundoff;
            let oldtotalincome = oldnormalincome;
            let oldtaxonnormalincome = 0;
            let oldrebate = 0;
            let oldsurcharge = 0;
            let oldmarginalrelief = 0;
            let age = parseInt(document.getElementById('age').value) || 30;

            if (age < 60) {
                if (oldnormalincome <= 250000) {
                    oldtaxonnormalincome = 0;
                } else if (oldnormalincome <= 500000) {
                    oldtaxonnormalincome = 0.05 * (oldnormalincome - 250000);
                } else if (oldnormalincome <= 1000000) {
                    oldtaxonnormalincome = 12500 + 0.2 * (oldnormalincome - 500000);
                } else {
                    oldtaxonnormalincome = 112500 + 0.3 * (oldnormalincome - 1000000);
                }
            } else if (age >= 60 && age < 80) {
                if (oldnormalincome <= 300000) {
                    oldtaxonnormalincome = 0;
                } else if (oldnormalincome <= 500000) {
                    oldtaxonnormalincome = 0.05 * (oldnormalincome - 300000);
                } else if (oldnormalincome <= 1000000) {
                    oldtaxonnormalincome = 10000 + 0.2 * (oldnormalincome - 500000);
                } else {
                    oldtaxonnormalincome = 110000 + 0.3 * (oldnormalincome - 1000000);
                }
            } else {
                if (oldnormalincome <= 500000) {
                    oldtaxonnormalincome = 0;
                } else if (oldnormalincome <= 1000000) {
                    oldtaxonnormalincome = 0.2 * (oldnormalincome - 500000);
                } else {
                    oldtaxonnormalincome = 100000 + 0.3 * (oldnormalincome - 1000000);
                }
            }

            let oldtaxbeforerebate = oldtaxonnormalincome;
            if (oldtotalincome <= 500000) {
                oldrebate = Math.min(oldtaxbeforerebate, 12500);
            } else {
                oldrebate = 0;
            }
            
            let oldtaxbeforesurcharge = oldtaxbeforerebate - oldrebate;
            
            // Dividend tax calculation for old regime
            let olddividend = olddividendincome;
            let olddividendtax = 0;
            
            if (oldnormalincome > 0) {
                olddividendtax = (olddividend * oldtaxonnormalincome) / oldnormalincome;
            }
            
            // Old regime surcharge calculation
            if ((oldnormalincome - olddividendincome) > 50000000) {
                // 37% surcharge for income exceeding Rs. 5 crore
                oldsurcharge = (oldtaxonnormalincome - olddividendtax) * 0.37 + olddividendtax * 0.15;
            } else if ((oldnormalincome - olddividendincome) > 20000000) {
                // 25% surcharge for income exceeding Rs. 2 crore
                oldsurcharge = (oldtaxonnormalincome - olddividendtax) * 0.25 + olddividendtax * 0.15;
            } else if ((oldtotalincome) > 10000000) {
                // 15% surcharge for income exceeding Rs. 1 crore
                oldsurcharge = oldtaxbeforesurcharge * 0.15;
            } else if ((oldtotalincome) > 5000000) {
                // 10% surcharge for income exceeding Rs. 50 lakh
                oldsurcharge = oldtaxbeforesurcharge * 0.10;
            } else {
                // No surcharge
                oldsurcharge = 0;
            }

            // Marginal relief for old regime
            if (oldtotalincome > 50000000) {
                oldmarginalrelief = Math.max((oldtaxbeforesurcharge + oldsurcharge - 18515625) - (oldtotalincome - 50000000), 0);
            } else if (oldtotalincome > 20000000) {
                oldmarginalrelief = Math.max((oldtaxbeforesurcharge + oldsurcharge - 6684375) - (oldtotalincome - 20000000), 0);
            } else if (oldtotalincome > 10000000) {
                oldmarginalrelief = Math.max((oldtaxbeforesurcharge + oldsurcharge - 3093750) - (oldtotalincome - 10000000), 0);
            } else if (oldtotalincome > 5000000) {
                oldmarginalrelief = Math.max((oldtaxbeforesurcharge + oldsurcharge - 1312500) - (oldtotalincome - 5000000), 0);
            } else {
                oldmarginalrelief = 0;
            }

            let oldtaxbeforecess = oldtaxbeforesurcharge + oldsurcharge - oldmarginalrelief;
            let oldcess = Math.max(0, oldtaxbeforecess * 0.04);
            let tdstcs = Math.max(0, Number(document.getElementById('tdstcs').value) || 0);
            let oldgrosstaxpayable = Math.max(oldtaxbeforecess + oldcess, 0);

            // New Regime Tax Calculation
            let newnormalincome = newroundoff;
            let newtotalincome = newnormalincome;
            let newtaxonnormalincome = 0;
            let newrebate = 0;
            let newsurcharge = 0;
            let newmarginalrelief = 0;

            // New Tax Regime slabs
            if (newnormalincome <= 400000) {
                newtaxonnormalincome = 0;
            } else if (newnormalincome <= 800000) {
                newtaxonnormalincome = 0.05 * (newnormalincome - 400000);
            } else if (newnormalincome <= 1200000) {
                newtaxonnormalincome = 20000 + 0.1 * (newnormalincome - 800000);
            } else if (newnormalincome <= 1600000) {
                newtaxonnormalincome = 60000 + 0.15 * (newnormalincome - 1200000);
            } else if (newnormalincome <= 2000000) {
                newtaxonnormalincome = 120000 + 0.2 * (newnormalincome - 1600000);
            } else if (newnormalincome <= 2400000) {
                newtaxonnormalincome = 200000 + 0.25 * (newnormalincome - 2000000);
            } else {
                newtaxonnormalincome = 300000 + 0.3 * (newnormalincome - 2400000);
            }

            let newtaxbeforerebate = newtaxonnormalincome;
            
            // Rebate u/s 87A for new regime
            if (newnormalincome <= 1200000) {
                newrebate = Math.min(newtaxbeforerebate, 60000);
            } else {
                newrebate = 0;
            }

            let newtaxbeforesurcharge = newtaxbeforerebate - newrebate;

            // Surcharge for new regime
            if (newnormalincome > 20000000) {
                newsurcharge = newtaxbeforesurcharge * 0.25;
            } else if (newtotalincome > 10000000) {
                newsurcharge = newtaxbeforesurcharge * 0.15;
            } else if (newtotalincome > 5000000) {
                newsurcharge = newtaxbeforesurcharge * 0.10;
            } else {
                newsurcharge = 0;
            }

            // Marginal relief for new regime
            if (newtotalincome > 20000000) {
                newmarginalrelief = Math.max((newtaxbeforesurcharge + newsurcharge - 5580000) - (newtotalincome - 20000000), 0);
            } else if (newtotalincome > 10000000) {
                newmarginalrelief = Math.max((newtaxbeforesurcharge + newsurcharge - 2580000) - (newtotalincome - 10000000), 0);
            } else if (newtotalincome > 5000000) {
                newmarginalrelief = Math.max((newtaxbeforesurcharge + newsurcharge - 1080000) - (newtotalincome - 5000000), 0);
            } else {
                newmarginalrelief = 0;
            }

            let newtaxbeforecess = newtaxbeforesurcharge + newsurcharge - newmarginalrelief;
            let newcess = Math.max(0, newtaxbeforecess * 0.04);
        
            let newgrosstaxpayable = Math.max(newtaxbeforecess + newcess, 0);

            // Prior TDS Deducted
            let tdsMonths = ['apr', 'may', 'jun', 'jul', 'aug', 'sep', 'oct', 'nov', 'dec', 'jan', 'feb', 'mar'];
            let priorTDS = 0;
            tdsMonths.forEach(month => {
                priorTDS += Math.max(0, Number(document.getElementById(`tds_${month}`).value) || 0);
            });

            // Select regime
            let taxScheme = document.getElementById('tax_scheme').value;
            let grossSalary = taxScheme === 'old' ? oldgrosssalary : newgrosssalary;
            let hraExemption = taxScheme === 'old' ? oldexemptionsec13a : newexemptionsec13a;
            let exemptAllowance = taxScheme === 'old' ? oldotherexemption : newotherexemption;
            let professionalTax = taxScheme === 'old' ? oldprofessionaltax : newprofessionaltax;
            let standardDeduction = taxScheme === 'old' ? oldstandarddeduction : newstandarddeduction;
            let netSalary = taxScheme === 'old' ? oldnetsalary : newnetsalary;
            let netIncomeHP = taxScheme === 'old' ? oldnetincomehp : newnetincomehp;
            let dividendIncome = taxScheme === 'old' ? olddividendincome : newdividendincome;
            let otherIncome = taxScheme === 'old' ? oldotherincome : newotherincome;
            let netOtherSources = taxScheme === 'old' ? oldnetothersources : newnetothersources;
            let grossTotalIncome = taxScheme === 'old' ? oldgrosstotalincome : newgrosstotalincome;
            let totalDeduction = taxScheme === 'old' ? oldeligiblededuction : neweligiblededuction;
            let netTaxableIncome = taxScheme === 'old' ? oldnetincome : newnetincome;
            let incomeTax = taxScheme === 'old' ? oldtaxonnormalincome : newtaxonnormalincome;
            let rebate = taxScheme === 'old' ? oldrebate : newrebate;
            let surcharge = taxScheme === 'old' ? oldsurcharge : newsurcharge;
            let taxBeforeCess = taxScheme === 'old' ? oldtaxbeforecess : newtaxbeforecess;
            let cess = taxScheme === 'old' ? oldcess : newcess;
            let grossTaxPayable = taxScheme === 'old' ? oldgrosstaxpayable : newgrosstaxpayable;

            // Calculate remaining tax liability
            let annualTaxLiability = Math.max(grossTaxPayable - tdstcs, 0);

            // Update results
            document.getElementById('basic_salary_result').textContent = oldbasicsalary.toFixed(2);
            document.getElementById('hra_result').textContent = oldhra.toFixed(2);
            document.getElementById('bonus_result').textContent = oldbonus.toFixed(2);
            document.getElementById('special_allowance_result').textContent = oldspecialallowance.toFixed(2);
            document.getElementById('other_allowance_result').textContent = oldotherallowance.toFixed(2);
            document.getElementById('gross_salary').textContent = grossSalary.toFixed(2);
            document.getElementById('hra_exemption_result').textContent = hraExemption.toFixed(2);
            document.getElementById('exempt_allowance_result').textContent = exemptAllowance.toFixed(2);
            document.getElementById('professional_tax_result').textContent = professionalTax.toFixed(2);
            document.getElementById('standard_deduction').textContent = standardDeduction.toFixed(2);
            document.getElementById('total_exemptions').textContent = (hraExemption + exemptAllowance + professionalTax + standardDeduction).toFixed(2);
            document.getElementById('net_salary').textContent = netSalary.toFixed(2);
            document.getElementById('gross_annual_value_result').textContent = grossAnnualValue.toFixed(2);
            document.getElementById('municipal_tax_result').textContent = municipalTax.toFixed(2);
            document.getElementById('nav_result').textContent = nav.toFixed(2);
            document.getElementById('standard_deduction_24a_result').textContent = standardDeduction24a.toFixed(2);
            document.getElementById('interest_self_result').textContent = (taxScheme === 'old' ? oldinterestself : newinterestself).toFixed(2);
            document.getElementById('interest_letout_result').textContent = (taxScheme === 'old' ? oldinterestletout : newinterestletout).toFixed(2);
            document.getElementById('net_income_hp_result').textContent = netIncomeHP.toFixed(2);
            document.getElementById('dividend_income_result').textContent = dividendIncome.toFixed(2);
            document.getElementById('other_income_result').textContent = otherIncome.toFixed(2);
            document.getElementById('total_other_income_result').textContent = netOtherSources.toFixed(2);
            document.getElementById('gross_total_income').textContent = grossTotalIncome.toFixed(2);
            document.getElementById('section_80c_result').textContent = (taxScheme === 'old' ? olddeduction80c : 0).toFixed(2);
            document.getElementById('section_80ccc_result').textContent = (taxScheme === 'old' ? olddeduction80ccc : 0).toFixed(2);
            document.getElementById('section_80ccd1_result').textContent = (taxScheme === 'old' ? olddeduction80ccd1 : 0).toFixed(2);
            document.getElementById('section_80ccd1b_result').textContent = (taxScheme === 'old' ? olddeduction80ccd1b : 0).toFixed(2);
            document.getElementById('section_80ccd2_result').textContent = (taxScheme === 'old' ? olddeduction80ccd2 : newdeduction80ccd2).toFixed(2);
            document.getElementById('section_80d_result').textContent = (taxScheme === 'old' ? olddeduction80d : 0).toFixed(2);
            document.getElementById('section_80e_result').textContent = (taxScheme === 'old' ? olddeduction80e : 0).toFixed(2);
            document.getElementById('section_80g_result').textContent = (taxScheme === 'old' ? olddeduction80g : 0).toFixed(2);
            document.getElementById('section_80tta_result').textContent = (taxScheme === 'old' ? olddeduction80tta : 0).toFixed(2);
            document.getElementById('total_deductions').textContent = totalDeduction.toFixed(2);
            document.getElementById('gross_income_tax').textContent = grossTotalIncome.toFixed(2);
            document.getElementById('total_deductions_tax').textContent = totalDeduction.toFixed(2);
            document.getElementById('net_taxable_income').textContent = netTaxableIncome.toFixed(2);
            document.getElementById('income_tax').textContent = incomeTax.toFixed(2);
            document.getElementById('rebate').textContent = rebate.toFixed(2);
            document.getElementById('surcharge').textContent = surcharge.toFixed(2);
            document.getElementById('tax_after_rebate').textContent = taxBeforeCess.toFixed(2);
            document.getElementById('cess').textContent = cess.toFixed(2);
            document.getElementById('grosstaxpayable').textContent = grossTaxPayable.toFixed(2);
            document.getElementById('prior_tds_result').textContent = tdstcs.toFixed(2);
            document.getElementById('annual_tax_liability').textContent = annualTaxLiability.toFixed(2);
            
            // Monthly TDS Breakdown
            let monthlyTDS = annualTaxLiability / 12;
            let totalTDSLiability = grossTaxPayable;
            let tdsData = tdsMonths.map((month, index) => {
                let deducted = Math.max(0, Number(document.getElementById(`tds_${month}`).value) || 0);
                // Calculate cumulative TDS deducted up to the current month
                let cumulativeTDS = 0;
                for (let i = 0; i <= index; i++) {
                    cumulativeTDS += Math.max(0, Number(document.getElementById(`tds_${tdsMonths[i]}`).value) || 0);
                }
                
                // Calculate remaining months (including current month)
                let remainingMonths = 12 - index;
                
                // Calculate remaining liability after considering cumulative TDS
                let remainingLiability = Math.max(0, annualTaxLiability - cumulativeTDS + deducted);
                
                // TDS to be deducted for this month
                let tdsToBeDeducted = remainingMonths > 0 ? remainingLiability / remainingMonths : 0;
                
                return {
                    month: month.charAt(0).toUpperCase() + month.slice(1),
                    liability: monthlyTDS,
                    deducted: deducted,
                    toBeDeducted: tdsToBeDeducted
                };
            });

            let monthlyTdsTable = document.getElementById('monthly_tds_table');
            monthlyTdsTable.innerHTML = '';
            tdsData.forEach(data => {
                let row = document.createElement('tr');
                row.innerHTML = `<td>${data.month}</td><td>${data.liability.toFixed(2)}</td><td>${data.deducted.toFixed(2)}</td><td>${data.toBeDeducted.toFixed(2)}</td>`;
                monthlyTdsTable.appendChild(row);
            });

            // Update summary box to show average monthly TDS for remaining months
            let currentMonth = new Date().getMonth(); // 0-indexed (0 = January)
            let remainingMonthsData = tdsData.slice(currentMonth);
            let avgMonthlyTDS = annualTaxLiability / 12;
                
            document.getElementById('total_tds_deducted').textContent = priorTDS.toFixed(2);
            document.getElementById('total_tds_liability').textContent = totalTDSLiability.toFixed(2);
            document.getElementById('monthly_tds_amount').textContent = `₹ ${avgMonthlyTDS.toFixed(2)}`;

            // Update Chart
            if (window.tdsChart) window.tdsChart.destroy();
            window.tdsChart = new Chart(document.getElementById('tds-chart'), {
                type: 'bar',
                data: {
                    labels: tdsData.map(data => data.month),
                    datasets: [
                        {
                            label: 'TDS Liability',
                            data: tdsData.map(data => data.liability),
                            backgroundColor: 'rgba(26, 115, 232, 0.5)',
                            borderColor: 'rgba(26, 115, 232, 1)',
                            borderWidth: 1
                        },
                        {
                            label: 'TDS Deducted',
                            data: tdsData.map(data => data.deducted),
                            backgroundColor: 'rgba(77, 208, 225, 0.5)',
                            borderColor: 'rgba(77, 208, 225, 1)',
                            borderWidth: 1
                        },
                        {
                            label: 'TDS to be Deducted',
                            data: tdsData.map(data => data.toBeDeducted),
                            backgroundColor: 'rgba(46, 204, 113, 0.5)',
                            borderColor: 'rgba(46, 204, 113, 1)',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: { beginAtZero: true }
                    }
                }
            });
        }

        // Event Listeners
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize accordion sections
            const sections = ['basic-details', 'salary-details'];
            sections.forEach(id => {
                const body = document.getElementById(id);
                if (body) {
                    body.classList.add('active');
                    const header = body.previousElementSibling;
                    if (header) header.classList.add('active');
                }
            });
            
            loadFromLocalStorage();
            document.querySelectorAll('input, select').forEach(element => {
                element.addEventListener('input', function() {
                    saveToLocalStorage();
                });
                element.addEventListener('change', function() {
                    saveToLocalStorage();
                });
            });
        });
    </script>
</body>
</html>
